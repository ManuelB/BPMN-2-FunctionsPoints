<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:u="sap.ui.unified"
	xmlns:f="sap.ui.layout.form"
	>
	<Dialog title="JIRA Configuration">
		<f:SimpleForm id="SimpleFormToolbar" editable="true" layout="ResponsiveGridLayout">
			<f:content>
				<Label text="JIRA Base URL e.g. (http://example.com/jira)" />
				<Input value="{/baseUrl}" />
				<Label text="Username" />
				<Input value="{/username}"></Input>
				<Label text="Password" />
				<Input type="Password" value="{/password}"></Input>
			</f:content>
		</f:SimpleForm>
		<endButton>
			<Button text="Ok" press="onJiraConfigurationConfirm" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>